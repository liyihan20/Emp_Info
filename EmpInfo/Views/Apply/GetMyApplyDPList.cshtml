@{
    List<EmpInfo.FlowSvr.FlowMyAppliesModel> list = (List<EmpInfo.FlowSvr.FlowMyAppliesModel>)ViewData["list"]; 
}
@section CSS{
    <style type="text/css">
        #applyDiv img {
            opacity: 1;
        }

            #applyDiv img:hover {
                opacity: 0.6;
            }
    </style>
}
@section Scripts{
    <script>
        function CheckDetail(sysNo) {
            window.location.href = "CheckAndAuditDPApply?sysNo=" + sysNo;
        }
        function AbortApply(sysNo) {
            openConfirmDialog("确认要撤销/中止此维修申请吗？", function () {
                $.post("@Url.Content("~/Apply/AbortDPApply")", { sysNo: sysNo }, function (data) {
                    if (data.suc) {
                        toastr.success(data.msg);
                    } else {
                        toastr.error(data.msg);
                    }
                });
            });
        }
        </script>
    }
<div class="panel panel-success" id="applyDiv">
    <div class="panel-heading">
        <ol class="breadcrumb" style="margin:0;padding:0; background-color:transparent;">
            <li><span class="glyphicon glyphicon-hand-right"></span></li>
            <li><a href="@Url.Content("~/Home/Index")">主页</a></li>
            <li><a href="@Url.Content("~/Apply/DormRepairIndex")">宿舍维修申请</a></li>
            <li class="active">我申请的</li>
        </ol>
    </div>
    <div class="panel-body">
        
        @if (list.Count() == 0) {
            <p class="text-center text-warning">暂没有申请记录</p>
        }
        else {
            <h4 class="text-danger"><i>可以查看到最近一年内的申请记录:</i> </h4>
            <hr/>
        }
        <div class="row">
            @foreach (var i in list) {
                <div class="col-xs-12 col-md-3 col-sm-4">
                    <div class="thumbnail">                        
                        <img src="@Url.Content("~/Content/images/repair.png")" alt="repair">                        
                        <div class="caption">
                            <h3>@i.sysNo</h3>
                            <p>申请时间：@(((DateTime)i.applyTime).ToString("yyyy-MM-dd HH:mm:ss"))</p>
                            <p>宿舍号：@i.subTitle</p>
                            @{var textColor = "text-default";
                              if (i.auditResult == "成功") { textColor = "text-success"; }
                              if (i.auditResult == "失败") { textColor = "text-danger"; }
                              }
                            <p>审核结果：<b class="@textColor">@i.auditResult</b></p>
                            <p><button class="btn btn-primary btn-block" onclick="CheckDetail('@i.sysNo')"><i class="fa fa-search"></i> 查看详情</button></p>
                            @if (i.auditResult == "审批中") {
                                <p><button class="btn btn-danger btn-block" onclick="AbortApply('@i.sysNo')"><i class="fa fa-search"></i> 撤销申请</button></p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section modal{
    @Html.Partial("_ConfirmDialog")
}