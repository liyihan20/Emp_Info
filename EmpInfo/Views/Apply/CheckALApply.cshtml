@using EmpInfo.Models;
@{
    ALApplyModel al = (ALApplyModel)ViewData["am"];
}
@section CSS{
    <style type="text/css">
        
        #contentTb th{
            color: gray;
            font-weight:normal;
            font-style:italic;
        }

        #al_file_tb th {
            font-size: small;
            text-align: center;
        }

        #al_file_tb td {
            font-size: small;
            text-align: center;
        }

        #al_file_list i {
            cursor: pointer;
        }
    </style>
}
@section Scripts {
    <script>
    $(function () {
        $("#al_file_list").on("click", "td i", function () {
            var fileTD = $(this).parents("tr").find("td")[0];
            var fileName = $(fileTD).attr("data-fd");
            //window.location.href = "@Url.Content("~/File/DownLoadFile?sysNum=")" + "@al.sysNo" + "&fileName=" + fileName;
            //直接打开网页查看图片，不下载
            var sn = "@al.sysNo";
            var path = sn.substr(0, 2) + "/20" + sn.substr(2, 2) + "/" + sn.substr(4, 2) + "/" + sn + "/" + fileName;
            window.location.href = "@Url.Content("~/Att/")" + path;
        });
        $("#flowRecordBt").on("click", function () {
            var box = $("<div></div>");
            $(box).load("CheckFlowRecord .list-group", { sysNo: "@al.sysNo" }, function () {
                openMessageDialog($(box).html(), "查看流转记录");
            });

        });
        $("#leaveRecordBt").on("click", function () {

            $.post("@Url.Content("~/ApplyExtra/GetLeaveRecordsInOneYear")", { applierNameAndCard: "@al.applierNameAndCard" }, function (data) {
                    if (data.suc) {
                        var trs = data.list;
                        if (trs.length == 0) {
                            toastr.error("最近1年没有已通过的请假记录");
                            return;
                        }
                        var table = "<table width='100%' class='table'><thead><tr><th style='width:35%'>流水号/日期</th><th style='width:65%'>请假内容</th></tr></thead><tbody>";

                        for (var i = 0; i < trs.length; i++) {
                            table += "<tr>";
                            table += "<td><a href='checkApply?sysNo=" + trs[i].sysNo + "' target='_blank'>" + trs[i].sysNo + "</a><br/>" + trs[i].applyTime + "</td>";
                            table += "<td>" + trs[i].leaveType + " : " + trs[i].leaveDays + "<br/>" + trs[i].leaveDateSpan + "</td>";
                            table += "</tr>";
                        }

                        table += "</tbody></table>";
                        openMessageDialog(table, "查看最近1年已通过请假记录");
                    } else {
                        toastr.error(data.msg);
                    }


                });


            });
        });
</script>
}
<div class="row" style="margin-left:0;margin-right:0;">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12" style="padding-left:0;padding-right:0;">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <ol class="breadcrumb" style="margin:0;padding:0; background-color:transparent;">
                    <li><span class="glyphicon glyphicon-hand-right"></span></li>
                    <li><a href="@Url.Content("~/Home/Index")">主页</a></li>
                    <li><a href="@Url.Content("~/Home/WorkGroupIndex")">智慧办公集合</a></li>
                    <li><a href="ApplyIndex?billType=AL">请假申请单</a></li>
                    <li class="active">查看详情</li>
                </ol>
            </div>
            <div class="panel-body">
                <table style="width:100%;border-collapse:separate; border-spacing:8px;" id="contentTb">
                    <tr>
                        <th style="width:28%;">
                            审核状态                            
                        </th>
                        <td style="width:72%;">
                            <span class="pull-left" style="margin-top:5px;">@ViewData["auditStatus"]</span>                            
                            <button type="button" class="btn btn-default btn-sm pull-right" id="flowRecordBt"><i class="fa fa-level-down"></i> 流转记录</button>
                            
                        </td>
                    </tr>
                    <tr>
                        <th>申请流水号</th>
                        <td>
                            @al.sysNo                            
                        </td>
                    </tr>                    
                    <tr>
                        <th>申请人</th>
                        <td>
                            <span class="pull-left" style="margin-top:5px;">@al.applierNameAndCard</span>   
                            <button type="button" class="btn btn-default btn-sm pull-right" id="leaveRecordBt"><i class="fa fa-book"></i> 请假记录</button>
                        </td>
                    </tr>                    
                    <tr>
                        <th>申请时间</th>
                        <td>@al.applyTime</td>
                    </tr>
                    <tr>
                        <th>所属部门</th>
                        <td>@al.depLongName</td>
                    </tr>
                    <tr>
                        <th>职位级别</th>
                        <td>@al.empLevel</td>
                    </tr>
                    <tr>
                        <th>董事/总经理办公室直管</th>
                        <td>@al.isDirectCharge</td>
                    </tr>
                    <tr>
                        <th>请假类型</th>
                        <td>@al.leaveType</td>
                    </tr>
                    <tr>
                        <th>请假时间</th>
                        <td>@al.leaveTimeZone</td>
                    </tr>
                    <tr>
                        <th>请假天数</th>
                        <td>@al.totalLeaveDays</td>
                    </tr>
                    <tr>
                        <th>延假</th>
                        <td>@al.isContinue</td>
                    </tr>
                    <tr>
                        <th>请假事由</th>
                        <td>@al.leaveReason</td>
                    </tr>
                    <tr>
                        <th>工作代理</th>
                        <td>@al.agentMan</td>
                    </tr>
                    <tr>
                        <th>知会人</th>
                        <td>@al.informMan</td>
                    </tr>
                </table>  
                @if (al.hasAttachment) { 
                <div class="b-div">
                    <div class="panel panel-default" id="al_file_panel">
                        <div class="panel-heading">附件信息</div>
                        <div class="panel-body" style="padding:0 8px;">
                            <table class="table table-condensed table-hover" id="al_file_tb" style="margin:10px 0;">
                                <thead>
                                    <tr>
                                        <th style="width:55%;">名称</th>
                                        <th style="width:25%;">大小</th>
                                        <th style="width:20%;">查看</th>
                                    </tr>
                                </thead>
                                <tbody id="al_file_list">
                                    @foreach (var file in al.attachments) {
                                        <tr>
                                            <td data-fd="@file.fileName">
                                                @if (file.fileName.Length > 20) {
                                                    var ext = file.fileName.Substring(file.fileName.IndexOf("."));
                                                    var showName = file.fileName.Substring(0, 14) + ".." + ext;
                                                    <span>@showName</span>
                                                }
                                                else {
                                                    <span>@file.fileName</span>
                                                }
                                            </td>
                                            <td>@file.fileSize</td>
                                            <td><i class="fa fa-file-picture-o text-success"></i></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>
@section Modal {
    @Html.Partial("_MessageDialog")
}
