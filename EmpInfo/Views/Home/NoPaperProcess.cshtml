@{
    string auts = (string)ViewData["autStr"];
}
@section CSS{
    <style type="text/css">
        #workGroup img {
            width: 48px;
            height: 48px;
        }
    </style>
}

<div class="panel panel-danger">
    <div class="panel-heading">
        <ol class="breadcrumb" style="margin:0;padding:0; background-color:transparent;">
            <li><span class="glyphicon glyphicon-hand-right"></span></li>
            <li><a href="@Url.Content("~/Home/Index")">主页</a></li>
            <li><a href="@Url.Content("~/Home/WorkGroupIndex")">智慧办公</a></li>
            <li class="active">无纸化流程</li>
        </ol>
    </div>
    <div class="panel-body" id="workGroup">
        <div class="row" style="margin: 0;">
            @if (auts.IndexOf("AP_Process") >= 0) {        
                <div class="col-xs-4 col-sm-3 col-md-2">
                    <a href="@Url.Content("~/Apply/ApplyIndex?billType=AP")">
                        <img src="@Url.Content("~/Content/images/purchase.png")" alt="辅料订购申请" class="center-block" />
                        <p class="text-center">辅料订购申请</p>
                    </a>
                </div> 
            }
            @if (auts.IndexOf("ModuelTest") >= 0) { 
            <div class="col-xs-4 col-sm-3 col-md-2">
                <a href="@Url.Content("~/Apply/ApplyIndex?billType=JQ")">
                    <img src="@Url.Content("~/Content/images/quit.png")" alt="员工辞职/自离申请" class="center-block" />
                    <p class="text-center">员工辞职/自离申请</p>
                </a>
            </div>
            <div class="col-xs-4 col-sm-3 col-md-2">
                <a href="@Url.Content("~/Apply/ApplyIndex?billType=SJ")">
                    <img src="@Url.Content("~/Content/images/switch.png")" alt="员工调动申请" class="center-block" />
                    <p class="text-center">员工调动申请</p>
                </a>
            </div>
            }
        </div>
    </div>
</div>
