@using EmpInfo.Models;
@{
    WxConfigParam p = ViewData["wxConfigParam"] as WxConfigParam;
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/jweixin-1.4.0.js")"></script>
    <script>
        wx.config({
            debug: true, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
            appId: '@p.appId', // 必填，公众号的唯一标识
            timestamp: @p.timestamp, // 必填，生成签名的时间戳
            nonceStr: '@p.nonceStr', // 必填，生成签名的随机串
            signature: '@p.signature',// 必填，签名
            jsApiList: ['getLocation','scanQRCode'] // 必填，需要使用的JS接口列表
        });

        $(function(){
            $("#getPositionBt").on("click",function(){
                wx.getLocation({
                    type: 'wgs84', // 默认为wgs84的gps坐标，如果要返回直接给openLocation用的火星坐标，可传入'gcj02'
                    success: function (res) {                        
                        $("#currentPosition").html("纬度："+res.latitude+";经度："+res.longitude);
                        //var latitude = res.latitude; // 纬度，浮点数，范围为90 ~ -90
                        //var longitude = res.longitude; // 经度，浮点数，范围为180 ~ -180。
                        //var speed = res.speed; // 速度，以米/每秒计
                        //var accuracy = res.accuracy; // 位置精度
                    }
                });
            });
            $("#scanBt").on("click",function(){
                wx.scanQRCode({
                    needResult: 1, // 默认为0，扫描结果由微信处理，1则直接返回扫描结果，
                    scanType: ["qrCode","barCode"], // 可以指定扫二维码还是一维码，默认二者都有
                    success: function (res) {
                        var result = res.resultStr; // 当needResult 为 1 时，扫码返回的结果
                        $("#scanResult").html(res.resultStr);
                    }
                });
            });
        })
    </script>
}

<button class="btn btn-danger btn-block" id="getPositionBt"><i class="fa fa-location-arrow"></i> 获取当前经纬度</button>
<button class="btn btn-danger btn-block" id="scanBt"><i class="fa fa-location-arrow"></i> 扫码</button>
<div id="currentPosition"></div>
<div id="scanResult"></div>
