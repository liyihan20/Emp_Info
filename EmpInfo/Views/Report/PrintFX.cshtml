@using EmpInfo.Models;
@{
    FXCheckApplyModel m = ViewData["m"] as FXCheckApplyModel;
    var h = m.bill;
    int numPerPage = 20;
    int pageNum = (int)Math.Ceiling((decimal)m.entrys.Count() / numPerPage);
}

@section CSS{
    <style type="text/css" media="print">
        .noPrint{
            display:none;
        }
        .pageNext {
            page-break-after: always;
        }        
    </style>
    <style type="text/css">
        #reportTb tr td{
            text-align:center;
            border:1px solid;
            padding:2px;
        }
        #itemTb tr td{
            text-align:center;
            border:1px dashed;
            padding:2px;
        }
    </style>
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/JsBarcode.code128.min.js")"></script>
    <script>
        $(function () {
            $(".bar").each(function (index, ele) {
                JsBarcode(ele, "@h.sys_no", {
                    width: 1,//设置条之间的宽度
                    margin: 4,
                    height: 28,//高度
                    //text: "@h.sys_no",
                    displayValue: false,
                    fontSize: 12,
                    font: '黑体'
                });
            });
        })
        
    </script>
}

<div class="text-center noPrint" style="margin-bottom:8px;">
    <button type="button" class="btn btn-default btn-sm" onclick="javascript: window.print();"><i class="fa fa-print"></i> 开始打印</button>
</div>
@for (var p = 1; p <= pageNum; p++) {
    <div><img src="@Url.Content("~/Content/images/Truly.gif")" /></div>
    <div style="text-align:right;padding-right:8px;font-size:10px;">
        <img class="bar" />
        <div>申请单号：@h.sys_no</div>
    </div>
    <table style="width:100%;" id="reportTb">
        <tr>
            <td colspan="4">
                <div style="font-size:22px;font-weight:bold;padding:6px 2px;">物品放行条</div>
            </td>
        </tr>
        <tr>
            <td>业务类型:</td>
            <td colspan="3">@h.fx_type_name</td>
        </tr>
        <tr>
            <td style="width:20%;">公司:</td>
            <td style="width:30%;">@h.company</td>
            <td style="width:20%;">部门:</td>
            <td style="width:30%;">@h.bus_name</td>
        </tr>
        <tr>
            <td>打印人:</td>
            <td>@ViewData["printer"]</td>
            <td>打印时间:</td>
            <td>@DateTime.Now.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
        <tr>
            <td>件数:</td>
            <td>@h.total_pack_num</td>
            <td>收件范围:</td>
            <td>@h.to_scope</td>
        </tr>
        <tr>
            <td>收件地址:</td>
            <td colspan="3">@h.to_addr</td>
        </tr>    
        <tr>
            <td colspan="4" style="padding:8px;">
                <table style="width:100%;" id="itemTb">
                    <tr>
                        <td style="font-weight:bold;width:10%;">序号</td>
                        <td style="font-weight:bold;width:30%;">物品名称</td>
                        <td style="font-weight:bold;width:40%;">规格型号</td>
                        <td style="font-weight:bold;width:20%;">数量</td>
                    </tr>
                    @for (int i = (p - 1) * numPerPage; i < p * numPerPage; i++) {
                        if (i < m.entrys.Count()) {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@m.entrys[i].item_name</td>
                                <td>@m.entrys[i].item_model</td>
                                <td>@(m.entrys[i].item_qty.ToString("###,###")) @m.entrys[i].item_unit</td>
                            </tr>
                        }
                    }
                </table>
            </td>
        </tr>
                
        <tr>
            <td>申请原因:</td>
            <td colspan="3">@h.reason</td>
        </tr>
        <tr>
            <td>申请人:</td>
            <td>@h.applier_name</td>
            <td>联系电话:</td>
            <td>@h.applier_phone</td>
        </tr>
        @foreach (var a in m.auditorList) {
            <tr>
                <td>
                    @a.stepName :
                </td>
                <td colspan="3">
                    @a.auditorName @(((DateTime)a.auditTime).ToString("MM/dd HH:mm"))
                </td>
            </tr>
        }
    </table>
    if (p < pageNum) {
        <div class="pageNext"></div>
    }
}   